<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">
    <TextView
        android:id="@+id/bloodGroup"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:background="@color/Red"
        android:padding="12dp"
        android:layout_marginTop="6dp"
        android:text="O+"
        android:textColor="@color/White"
        android:textSize="62sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/WidgetSendIcon"
                android:layout_width="fill_parent"
                android:layout_height="25dip"
                android:gravity="center"
                android:paddingTop="3dip"
                android:src="@drawable/ic_baseline_security_24" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:paddingLeft="14dp"
                android:text="Md Shawon"
                android:textColor="@color/Black"
                android:textFontWeight="10"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/WidgetLocationIcon"
                android:layout_width="fill_parent"
                android:layout_height="25dip"
                android:gravity="center"
                android:paddingTop="3dip"
                android:src="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:paddingLeft="14dp"
                android:text="Dhaka"
                android:textColor="@color/Black"
                android:textFontWeight="10"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/WidgetIcon"
                android:layout_width="fill_parent"
                android:layout_height="25dip"
                android:gravity="center"
                android:paddingTop="3dip"
                android:src="@drawable/ic_baseline_send_24" />

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:paddingLeft="14dp"
                android:text="Ready to Donate"
                android:textColor="@color/Black"
                android:textFontWeight="10"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/WidgetStatusIcon"
                android:layout_width="fill_parent"
                android:layout_height="25dip"
                android:gravity="center"
                android:paddingTop="3dip"
                android:src="@drawable/ic_baseline_phone_24" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:paddingLeft="14dp"
                android:text="Available"
                android:textColor="@color/Green"
                android:textFontWeight="10"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="120dp"
            android:background="@color/White"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:id="@+id/call_button"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_phone_forwarded_24" />
    </LinearLayout>
</LinearLayout>